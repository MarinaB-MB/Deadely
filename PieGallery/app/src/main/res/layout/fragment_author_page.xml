<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivProfile"
            android:layout_margin="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="golden boy" />

        <RelativeLayout
            android:id="@+id/rlImagesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/ivProfile"
            android:paddingHorizontal="5dp"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/tvImagesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                tools:text="2 476" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvImagesCount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin10"
                android:textAlignment="center"
                android:text="Количество \nпубликаций" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/rlImagesCount"
            android:paddingHorizontal="5dp"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/tvLikesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                tools:text="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLikesCount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin10"
                android:textAlignment="center"
                android:text="Количество\n лайков" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUsername"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="instagram" />

            <TextView
                android:id="@+id/tvInstagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="dell" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="twitter" />

            <TextView
                android:id="@+id/tvTwitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="Dell" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="portfolio" />

            <TextView
                android:id="@+id/tvPortfolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="http://www.dell.com/xps" />
        </LinearLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textSize20" />
</LinearLayout>